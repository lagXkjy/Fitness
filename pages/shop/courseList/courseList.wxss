.banner {
  width: 100%;
  height: 240rpx;
  position: relative;
  top: 0;
  left: 0;
  z-index: 100;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-text {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width: 100%;
}

.banner-btn {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  border: 2px solid #ff425b;
  width: 120rpx;
  height: 40rpx;
}

.all {
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 50;
  background: rgba(0, 0, 0, 0.5);
  padding-top: 300rpx;
}

.all-course {
  height: 60rpx;
  width: 100%;
  position: relative;
  top: 0;
  left: 0;
  z-index: 80;
  overflow: hidden;
}

.all-list {
  width: 100%;
  height: 60rpx;
}

.all-image {
  width: 20rpx;
}
